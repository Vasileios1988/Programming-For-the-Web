@model SET11105_CW2.Models.Member
@{
    ViewData["Title"] = "Sign Up";
}

<h2>Please Sign Up:</h2>

<!--below is the form asking the user for the relevant information in order to pass and store the information to the database and create a new user-->

@using (Html.BeginForm())
{

  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true)


<fieldset>
    <legend>Become A Member</legend>

    <div class="form-group">
        @Html.LabelFor(model => model.name)
        <div class="col-md-10">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.lastName)
        <div class="col-md-10">
            @Html.EditorFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.username)
        <div class="col-md-10">
            @Html.EditorFor(model => model.username)
            @Html.ValidationMessageFor(model => model.username)
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.email)
        <div class="col-md-10">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>
    </div>

    <div>
        <label for="email">Confirm your email</label>
        <div class="col-md-3">
            <input type="email"  id="email" />
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.password)
        <div class="col-md-10">
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>
    </div>

    <div>
        <label for="psw">Confirm your password</label>
        <div class="col-md-3">
            <input type="password" id="psw" />
        </div>
    </div>

    <br />

    <p>
        <input type="submit" value="Sign Up" />
    </p>

</fieldset>

<div>
    @Html.ActionLink("Back to HomePage", "Index")
</div>

}


